<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitXY"
                    android:background="@drawable/transparent_black_gradient_shape"
                    app:layout_collapseMode="parallax"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/textView_label_about_fwdc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:text="बिकाश आयोग को बारेमा"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/nliveo_black"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <at.blogc.android.views.ExpandableTextView
                        android:id="@+id/textView_about_fwdc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/nliveo_black"
                        android:maxLines="5"
                        android:ellipsize="end"
                        app:animation_duration="750"/>

                    <Button
                        android:id="@+id/button_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="@string/expand"
                        android:layout_alignParentRight="true"
                        android:background="#00ffffff"
                        android:textColor="@color/primary_darker"
                        android:layout_below="@id/textView_about_fwdc"/>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/divider_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <ExpandableListView
                        android:nestedScrollingEnabled="true"
                        android:id="@+id/lvExp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/grey"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:orientation="vertical">


                    <android.support.design.widget.TabLayout
                        android:id="@+id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/nliveo_white"
                        android:elevation="3dp"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                        app:tabGravity="fill"
                        app:tabIndicatorColor="@color/accent"
                        app:tabIndicatorHeight="3dp"
                        app:tabMode="fixed"
                        app:tabSelectedTextColor="@color/accent"
                        app:tabTextColor="@color/primary" />

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:visibility="gone"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="500dp"-->
                    <!--android:orientation="vertical">-->

                    <!--<TextView-->
                        <!--android:id="@+id/tvproject_list_about_fwdc"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginLeft="15dp"-->
                        <!--android:layout_marginRight="15dp"-->
                        <!--android:layout_marginTop="20dp"-->
                        <!--android:text="बिकाश आयोजना को पि डी एफ हरु "-->
                        <!--android:textAlignment="center"-->
                        <!--android:textAppearance="?android:attr/textAppearanceSmall"-->
                        <!--android:textColor="@color/nliveo_black"-->
                        <!--android:textSize="18dp"-->
                        <!--android:textStyle="bold"-->
                        <!--/>-->

                    <!--<android.support.v7.widget.RecyclerView-->
                        <!--android:id="@+id/recycler_project_list"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_margin="10dp"/>-->


                <!--</LinearLayout>-->
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>